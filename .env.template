# Neo4j Configuration
# Main database configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_password_here

# Database environments
NEO4J_DATABASE_CASUAL=casual
NEO4J_DATABASE_CASUAL_1=casual-1
NEO4J_DATABASE_KNOWLEDGE=knowledge
NEO4J_CURRENT_DATABASE=casual

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000

# Entity Linking Configuration
ENTITY_LINKING_THRESHOLD=0.7
MAX_ENTITIES=5
ENTITY_BLACKLIST=source,type,procedure,study,treatment,patient,following,process,structure,device,method

# Path Configuration
DATA_DIR=./data
CACHE_DIR=./cache
OUTPUT_DIR=./output
LOG_DIR=./logs

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Performance Configuration
BATCH_SIZE=5000
MAX_WORKERS=6